{
  "name": "@gethinode/yq-bin",
  "version": "0.1.1",
  "yqVersion": "4.40.5",
  "description": "Binary wrapper for yq (work in progress)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gethinode/yq-bin.git"
  },
  "bugs": {
    "url": "https://github.com/gethinode/yq-bin/issues"
  },
  "homepage": "https://github.com/gethinode/yq-bin#readme",
  "author": "Mark Dumay",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./index.js"
  },
  "bin": {
    "yq": "bin/cli.js"
  },
  "dependencies": {
    "@xhmikosr/bin-wrapper": "^12.0.0",
    "pkg-conf": "^4.0.0"
  },
  "devDependencies": {
    "@xhmikosr/bin-check": "^6.0.0",
    "c8": "^8.0.1",
    "uvu": "^0.5.6",
    "xo": "^0.56.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "lint": "xo",
    "fix": "xo --fix",
    "uvu": "uvu test",
    "test": "npm run lint && npm run uvu",
    "test:ci": "c8 npm run uvu",
    "postinstall": "node lib/install.js"
  },
  "files": [
    "bin/cli.js",
    "lib/*.js",
    "index.js"
  ],
  "engines": {
    "node": ">=16"
  },
  "xo": {
    "space": true,
    "rules": {
      "arrow-body-style": "off",
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "capitalized-comments": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "operator-linebreak": [
        "error",
        "after"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "unicorn/prefer-top-level-await": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  }
}
