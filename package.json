{
  "name": "@gethinode/yq-bin",
  "version": "1.0.3",
  "yqVersion": "4.42.1",
  "description": "Binary wrapper for yq",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gethinode/yq-bin.git"
  },
  "bugs": {
    "url": "https://github.com/gethinode/yq-bin/issues"
  },
  "homepage": "https://github.com/gethinode/yq-bin#readme",
  "author": "Mark Dumay",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./index.js"
  },
  "bin": {
    "yq": "bin/cli.js"
  },
  "dependencies": {
    "@xhmikosr/bin-wrapper": "^13.0.4",
    "package-config": "^5.0.0"
  },
  "devDependencies": {
    "@xhmikosr/bin-check": "^6.0.0",
    "c8": "^9.1.0",
    "uvu": "^0.5.6",
    "xo": "^0.58.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "lint": "xo",
    "fix": "xo --fix",
    "uvu": "uvu test",
    "test": "npm run lint && npm run uvu",
    "test:ci": "c8 npm run uvu",
    "postinstall": "node lib/install.js",
    "upgrade": "npx npm-check-updates -u"
  },
  "files": [
    "bin/cli.js",
    "lib/*.js",
    "index.js"
  ],
  "engines": {
    "node": ">=16"
  },
  "xo": {
    "space": true,
    "rules": {
      "arrow-body-style": "off",
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "capitalized-comments": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "operator-linebreak": [
        "error",
        "after"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "unicorn/prefer-top-level-await": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  }
}
